<% layout('layouts/boilerplate') %>
<h1>Search Index</h1>

<section class="search-entry">
  <form id="searchBar" class="search-bar d-flex" role="search">
    <label for="search" hidden>Enter a search term or phrase</label>
    <input id="search" class="form-control me-2" type="search" placeholder="Search" aria-label="Search" role="searchbox">
    <button id="searchBtn" class="search-btn btn btn-outline-success" type="submit">Search</button>
  </form>
</section>

<section class="results d-flex justify-space-evenly">
  <div class="search-results-container flex-fill w-50">
    <h2>Search Results</h2>
    <div id="statsBar" class="stats-bar">
      <div id="stats" class="stats" aria-live="assertive"></div>
    </div>
    <div id="searchResults" class="search-results"></div>
  </div>
  <div class="selected-result-container flex-fill w-50">
    <h2>Selected Result</h2>
    <div id="selectedResult" class="selected-result"></div>
  </div>
</section>

<script src="/javascripts/main.js"></script>
<script src="/javascripts/searchData.js"></script>
<script src="/javascripts/searchBar.js"></script>
<script src="/javascripts/searchResults.js"></script>
<script src="/javascripts/resultData.js"></script>
